{
  "deno.enable": true,
  "deno.lint": true,
  "deno.unstable": false,
  "typescript.tsdk": "node_modules/typescript/lib",
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "quickfix.biome": "always",
      "source.organizeImports.biome": "always"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "quickfix.biome": "always",
      "source.organizeImports.biome": "always"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "quickfix.biome": "always",
      "source.organizeImports.biome": "always"
    }
  }
}
